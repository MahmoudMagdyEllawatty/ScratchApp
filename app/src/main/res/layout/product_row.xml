<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:background="@mipmap/arduino_tab"
                android:id="@+id/rl_row"
    >

    <TextView
        android:id="@+id/product_name"
        android:text="arduino uno"
        android:textSize="20sp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/product_price"
        android:text="95 L.E"
        android:textSize="20sp"
        android:layout_below="@+id/product_name"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <ImageButton
        android:id="@+id/product_like"
        android:background="@mipmap/like_deactive"
        android:layout_below="@+id/product_price"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:tag="@mipmap/like_deactive"
        />


    <ImageButton
        android:id="@+id/product_cart"
        android:background="@mipmap/cart_black"
        android:layout_below="@+id/product_price"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="40dp"
        android:layout_toRightOf="@+id/product_like"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:tag="@mipmap/cart_black"
        />


    <ImageView
        android:id="@+id/product_image"
        android:layout_marginTop="20dp"
        android:layout_alignParentRight="true"
        android:src="@mipmap/_1_mega"
        android:layout_marginRight="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>



    <Button
        android:id="@+id/product_quantity_minus"
        android:layout_toRightOf="@+id/product_price"
        android:layout_marginLeft="10dp"
        android:layout_alignTop="@+id/product_price"
        android:layout_alignBottom="@+id/product_price"
        android:text="-"
        android:textSize="20sp"
        android:layout_width="20dp"
        android:layout_height="0dp"
        style="@style/Widget.AppCompat.Button.Small"
        android:background="#9b1616"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textStyle="normal|bold"
        android:gravity="center"

        />

    <TextView
        android:id="@+id/product_quantity"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/product_quantity_minus"
        android:layout_alignTop="@+id/product_quantity_minus"
        android:layout_alignBottom="@+id/product_quantity_minus"
        android:text="1"
        android:textColor="#fff"
        android:background="#000000"
        android:gravity="center"
        />



    <Button
        android:id="@+id/product_quantity_plus"
        android:layout_toRightOf="@+id/product_quantity"
        android:layout_alignTop="@+id/product_price"
        android:layout_alignBottom="@+id/product_price"
        android:text="+"
        android:textSize="20sp"
        android:layout_width="20dp"
        android:layout_height="0dp"
        style="@style/Widget.AppCompat.Button.Small"
        android:background="#9b1616"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textStyle="normal|bold"
        android:gravity="center"

        />

</RelativeLayout>